<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/ivDts"
        android:src="@drawable/dts"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:adjustViewBounds="true"
        android:layout_height="wrap_content"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tvDtsTitle"
        android:text="DIGITAL TALENT SCHOLARSHIP"
        android:textColor="#000"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:layout_above="@+id/ivDts"
        android:layout_marginBottom="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/tvTahun"
        android:text="2019"
        android:textStyle="bold"
        android:textColor="#000"
        android:textSize="20dp"
        android:gravity="center_horizontal"
        android:layout_above="@+id/ivDts"
        android:layout_marginBottom="20dp"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText,SpUsage" />

    <TextView
        android:id="@+id/tvPoliban"
        android:text="POLITEKNIK BANJARMASIN"
        android:textSize="20dp"
        android:textColor="#000"
        android:textStyle="bold"
        android:gravity="center_horizontal"
        android:layout_marginTop="200dp"
        android:layout_below="@+id/ivDts"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText,SpUsage" />

</RelativeLayout>